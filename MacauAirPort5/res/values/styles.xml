<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
         <!-- <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item> -->
        <item name="android:windowNoTitle">true</item>
        <!--  <item name="android:background">@color/text_white</item> -->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 <style name="layout_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 机票查询tab大字体 -->
    <style name="layout_flight_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dip</item>
    </style>

    <!-- 主体显示区域 -->
    <style name="body" parent="layout_fill">
        <item name="android:orientation">vertical</item>
        <item name="android:id">@id/view_mainBody</item>
    </style>

    <!-- 标题框架样式 -->
    <style name="title_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@color/text_blue</item>
    </style>

    <!-- 标题剧中文本样式 -->
    <style name="title_text" >
        <item name="android:id">@id/title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="popup_in_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_bottom_out</item>
    </style>
    <!-- 标题左则Button样式 -->
    <style name="title_left_but" parent="layout_wrap_content">
        <item name="android:background">@drawable/btn_back_public_bg</item>
        <!-- <item name="android:textSize">14.0sp</item> -->
        <!-- <item name="android:textColor">@color/text_white</item> -->
    </style>

    <!-- 标题右则Button样式 -->
    <style name="title_right_but" parent="layout_wrap_content">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/text_white</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_blue</item>
        
    </style>
    <!-- Dialog样式 -->
    <style name="super_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
    </style>

    <!-- Dialog样式  （阴影） -->
    <style name="dialog" parent="super_dialog">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
    </style>

    <!-- Dialog样式  （无阴影） -->
    <style name="dialog_windowFullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="center_nomal_text" parent="layout_fill_wrap">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="home_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ContentOverlay" parent="@android:style/Theme.Light">
        <item name="@android:windowNoTitle">true</item>
        <item name="@android:windowIsTranslucent">true</item>
        <item name="@android:windowContentOverlay">@null</item>
    </style>

    <style name="text_16_000000">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="home_tv" parent="text_16_000000">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/Text</item>
    </style>

    <!-- 普通文本 -->
    <style name="base_text" parent="layout_wrap_content">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <!-- 普通edit文本 -->
    <style name="base_edit_text" parent="layout_wrap_content">
        <item name="android:textSize">14dip</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="base_edit_text1" parent="base_edit_text">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="text_18_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- 机票查询页面的文本框样式 -->
    <style name="flght_home" parent="layout_fill_wrap">
        <item name="android:layout_height">48dip</item>
        <item name="android:background">@drawable/all_oval_angle_shape</item>
        <item name="android:padding">5dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableRight">@drawable/icon_arrow</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <!-- 按钮通用样式 -->
    <style name="flight_btn_bg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@drawable/base_text_color_counter</item>
    </style>
    <!-- 普通list样式 -->
    <style name="base_list_style">
        <item name="android:divider">#00000000</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@drawable/listview_item_bg</item>
    </style>
    <!-- 编辑输入框外layout -->
    <style name="edit_layout" parent="layout_fill_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/img_input</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 编辑输入框 -->
    <style name="edit" parent="layout_fill_wrap">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15.0sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <!-- 基本button样式 -->
    <style name="base_btn_style">
        <item name="android:background">@drawable/btn_big_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
    </style>
    <!-- 普通Button -->
    <style name="base_but" parent="layout_wrap_content">

        <!-- <item name="android:background">@drawable/base_but_bg</item> -->
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@drawable/base_text_color</item>
    </style>
    <!-- 航班查询结果界面，按起降低查询标题样式 -->
    <style name="fd_place_titil_ll" parent="layout_wrap_content">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 航班查询结果界面，按起降低查询标题 中字的样式 -->
    <style name="fd_place_titil_word" parent="layout_wrap_content">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/flight_dynamic_title</item>
    </style>

    <style name="animationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay_orig</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_right_out</item>
    </style>

    <!-- 应用样式 -->
    <style name="fly_style" parent="@android:style/Theme.NoTitleBar">
        <item name="@android:windowAnimationStyle">@style/animationActivity</item>
    </style>



  <style name="CalendarTitle">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CalendarCell">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CalendarCell.DayHeader">
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textSize">@dimen/calendar_text_small</item>
  </style>

  <style name="CalendarCell.CalendarDate">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:background">@color/calendar_bg_selector</item>
    <item name="android:clickable">true</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="home_text_style" parent="layout_wrap_content">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#82A3B9</item>
  </style>
  <!-- 弹出框样式 -->
    <style name="dialogFloat" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:windowAnimationStyle">@style/popup_in_out</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
        <!-- 模糊 -->
    </style>
    <style name="gridView_style" parent="layout_fill_wrap">
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:columnWidth">150dip</item>
        <item name="android:scrollbars">none</item>
    </style>
   <!-- 九宫格布局-->
    <style name="nine_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_white</item>
        <!-- <item name="android:gravity">center_horizontal|top</item> -->
