<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_fill" android:gravity="center"
    android:paddingLeft="10dip" android:paddingRight="10dip">
	<LinearLayout style="@style/layout_fill_wrap" android:orientation="horizontal"
	    android:paddingLeft="13dip" android:paddingRight="16dip"
	    android:paddingBottom="18dip" android:paddingTop="10dip" android:background="@drawable/img_loading_bg">
		<ImageView android:id="@id/iv_id" style="@style/layout_wrap_content"
		    android:background="@anim/loading" android:layout_gravity="center_vertical"/>
		<TextView android:id="@id/tv_id" style="@style/layout_wrap_content" 
		    android:textSize="16.0sp" android:textColor="@color/text_black" 
		    android:layout_marginLeft="6dip" android:text="@string/please_wait"
		    android:layout_gravity="center_vertical"/>
	</LinearLayout>
</LinearLayout>
