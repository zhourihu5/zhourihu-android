<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/text_white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            style="@style/rectangle_line_blue"
            android:background="@null"
            android:padding="8dp"
            android:text="@string/hotline_tel_airline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/text_blue" />

        <Button
            android:id="@id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableRight="@drawable/icon_tell_small"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="(+853)2886 1111" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/text_blue" />

        <TextView
            android:id="@id/btn_1"
            style="@style/rectangle_line_blue"
            android:background="@null"
            android:padding="8dp"
            android:text="@string/hotline_tel_emergency" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/text_blue" />

        <Button
            android:id="@id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableRight="@drawable/icon_tell_small"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="SOS" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/text_blue" />
    </LinearLayout>

</ScrollView>
<View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>