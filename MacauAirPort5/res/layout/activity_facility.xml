<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="8dp"
    android:background="@color/text_white"
    android:orientation="vertical">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
      <com.sinoglobal.app.widget.NoScrollListView android:id="@id/listview" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:scrollbars="none" android:background="@drawable/shape_rectangle"/>
        
    </ScrollView>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
        android:layout_below="@id/listview"/>
</LinearLayout>